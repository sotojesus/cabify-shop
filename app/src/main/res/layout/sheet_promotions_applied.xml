<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_close_24"
        app:navigationIconTint="?colorOnPrimaryContainer"
        tools:title="Promotions applied: 2"/>
    
    <androidx.recyclerview.widget.RecyclerView 
        android:id="@+id/promotionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?listPreferredItemHeightLarge"
        tools:listitem="@layout/list_item_promotion_applied"/>

</LinearLayout>
